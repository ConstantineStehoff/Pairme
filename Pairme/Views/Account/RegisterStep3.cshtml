@model Pairme.Models.RegisterViewModelStep3
@{
    ViewBag.Title = "RegisterStep3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Step 2</h2>

<div class="container">
    @using (Html.BeginForm("RegisterStep3", "Account", FormMethod.Post, new { @class = "form-horizontal ds-initForm", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="file">Upload Image:</label>
            <input type="file" name="file" id="file" style="width: 100%;" />
            <input type="submit" value="Upload" class="submit" /> 
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Summary, "Summary")
            @Html.TextAreaFor(model => model.Summary, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Summary)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TermsOfService, "I agree with Terms Of Use")
            @Html.CheckBoxFor(model => model.TermsOfService, new { @class = "form-control" })
        </div>

        <button type="submit" name="Command" value="Back" class="btn btn-primary">Back</button>
        <button type="submit" name="Command" value="Next" class="btn btn-primary">Create Account</button>
    }
</div>



